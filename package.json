{
  "name": "melchior",
  "version": "0.0.2",
  "description": "smart framework for telegram bots",
  "main": "lib/main/index.js",
  "typings": "lib/main/index.d.ts",
  "module": "lib/module/index.js",
  "type": "module",
  "repository": "https://github.com/altadenagroup/melchior.git",
  "author": "lyrical <lyricalsoul@proton.me>",
  "license": "MIT",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "prettier \"src/**/*.ts\" --write",
    "watch:build": "tsc -p tsconfig.json -w",
    "doc": "run-s doc:html && open-cli lib/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out lib/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json lib/docs/typedoc.json",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.2.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "lib/main",
    "lib/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "tabWidth": 2
  },
  "dependencies": {
    "telegraf": "^4.13.1"
  }
}
